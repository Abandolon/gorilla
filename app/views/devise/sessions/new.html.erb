<div class="container devise margin-top-sign-in">
  <div id="gorilla-login-page-header">
    <%= image_tag "gorilla-white.png", height: 90 %>
    <h2 class="header-gorilla" id="margin-top-login">GO!RILLA</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs login-fields" id="whole-form">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", id:"login-form-name" },
                  label: false,
                  placeholder: 'Email',
                  label_html: { class: 'simple_form_label' } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  label: false,
                  placeholder: 'Password',
                  label_html: { class: 'simple_form_label' } %>

      <!-- line below will automatically trigger the "remember me" function to stay logged in in the app-->

      <%f.input :remember_me, as: :boolean, input_html: {checked: true}%>

    </div>

    <div class="form-actions btn-login log-in-btn">
      <%= f.button :submit, "Log In" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
