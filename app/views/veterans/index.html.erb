<div id="veteran-index-sticky" class="container">
  <!-- <div id="veterans-index-display-flex"> -->
    <h2 id="index-header" style="text-align: center">
     <i class="fas fa-map-marker-alt"></i>
     <div class="gym-name">
       @ <%= @gym.name %>
     </div>
   </h2>
   <div id="carousel" class="carousel slide" data-ride="true">
     <div class="carousel-inner" role="listbox">
      <% @trainers.each_with_index do |trainer, index| %>
      <% if index == 0 %>
      <div class="carousel-item active">
        <%= link_to user_path(trainer.id) do  %>
        <div class="card-trip  transparent-card">
          <%= cl_image_tag(trainer.photo, crop: :thumb, gravity: :face, class:"trainer-img") %>
          <div class="card-info-column">
            <div style="  width: 100% !important;">
              <div id="trainer-desc-col">
                <h2 class="card-text trainer-name"><%= trainer.name %> - <%= trainer.age %></h2><br>
                <p id="trainer-desc-card" class="card-text trainer-name"><%= trainer.description %></p><br>
              </div>
              <div class="card-trip-infos">
                <div id="left-container">
                  <div id="position-relative">
                    <%= cl_image_tag(trainer.gifts.first.photo, crop: :thumb, gravity: :face, class:"product-avatar dollar-icon") %>
                  </div>
                </div>
                <div id="right-container">
                  <i id="time-icon" class="fas fa-clock"></i>
                  <div>
                    <h2><%= trainer.gifts.first.time %></h2>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <% else %>
      <div class="carousel-item ">
        <%= link_to user_path(trainer.id) do  %>
        <div class="card-trip  transparent-card">
          <%= cl_image_tag(trainer.photo, crop: :thumb, gravity: :face, class:"trainer-img") %>
          <div class="card-info-column">
            <div style="  width: 100% !important;">
              <div id="trainer-desc-col">
                <h2 class="card-text trainer-name"><%= trainer.name %> - <%= trainer.age %></h2><br>
                <p id="trainer-desc-card" class="card-text trainer-name"><%= trainer.description %></p><br>
              </div>
              <div class="card-trip-infos">
                <div id="left-container">
                  <div id="position-relative">
                    <%= cl_image_tag(trainer.gifts.first.photo, crop: :thumb, gravity: :face, class:"product-avatar dollar-icon") %>
                  </div>
                </div>
                <div id="right-container">
                  <i id="time-icon" class="fas fa-clock"></i>
                  <div>
                    <h2><%= trainer.gifts.first.time %></h2>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
       <span class="carousel-control-prev-icon"></span>
       <span class="sr-only">Previous</span>
     </a>
     <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
       <span class="carousel-control-next-icon"></span>
       <span class="sr-only">Next</span>
     </a>
     <% end %>
     <% end %>
   </div>
 </div>
</div>
